@import './colors.styl';

#publications
  .card
    overflow hidden
  // a
  //   color theme-blue
  //   &:hover
  //     color theme-blue-hover
  p
    font-size 14px
  ul
    list-style-type none
    padding 20px 0 0 0
    margin-top 20px
    li
      width 30%
      margin-right 5%
      margin-bottom 3%
      @media screen and (max-width: 900px)
        width 100%
        margin-left auto
        margin-right auto
      float left
      .image
        background-size cover
        width 99%
        height 150px
        margin-bottom 10px
      &:nth-child(3n)
        margin-right 0
